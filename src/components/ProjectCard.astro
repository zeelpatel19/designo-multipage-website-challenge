---
import { Image } from "astro:assets";

interface Props {
    title: string;
    image: ImageMetadata;

}

const {title, image} = Astro.props;
 
---



<div class="rounded-2xl overflow-hidden group cursor-pointer tablet:grid tablet:grid-cols-2 desktop:block">
    <Image
        src={image}
        alt={"express"}
        class="object-contain"

    />
    <div class="px-[1.875rem] min-h-[9.75rem] bg-[#FDF3F0] flex flex-col justify-center items-center gap-4 group-hover:bg-primary-peach transition-colors tablet:h-full desktop:h-[9.75rem]">
        <h3 class="text-primary-peach uppercase heading-sm group-hover:text-primary-white">{title}</h3>
        <p class="text-center group-hover:text-primary-white">
            <slot/>
        </p>
    </div>
</div>