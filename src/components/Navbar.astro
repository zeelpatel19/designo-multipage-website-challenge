---
import { Image } from "astro:assets";
import DesignoLogo from "../assets/shared/desktop/logo-dark.png";
---

<header class="wrapper relative z-20 bg-primary-white">
    <div class="mx-auto flex justify-between items-center py-9 px-6 tablet:px-0 tablet:py-16">
        <a href="/">
            <Image
                src={DesignoLogo}
                alt={"Designo Logo"}
                width={197}
                height={27}
            />
        </a>
        <nav class="hidden tablet:block">
            <ul class="flex gap-[2.625rem]">
                <li class="nav-item relative uppercase text-sm/[0.875rem] tracking-[2px] text-secondary-darkGrey  underline-offset-4"><a href="/about">our company</a></li>
                <li class="nav-item relative uppercase text-sm/[0.875rem] tracking-[2px] text-secondary-darkGrey  underline-offset-4"><a href="/locations">locations</a></li>
                <li class="nav-item relative uppercase text-sm/[0.875rem] tracking-[2px] text-secondary-darkGrey  underline-offset-4"><a href="/contact">contact</a></li>
            </ul>
        </nav>

        <div class="relative menu-icon hover:cursor-pointer flex flex-col gap-1 w-6 tablet:hidden">
            <div class="h-1 w-full bg-primary-black"></div>
            <div class="h-1 w-full bg-primary-black"></div>
            <div class="h-1 w-full bg-primary-black"></div>
            
        </div>

        <div class="mobile-nav-container absolute bottom-0 translate-y-full left-0 block w-full tablet:hidden z-10 overflow-hidden h-0">
            <ul class="mobile-nav bg-primary-black flex flex-col gap-8  px-6 py-12 relative">
                <li class="uppercase text-primary-white text-2xl/[1.5625rem] tracking-[2px]"><a href="/about">our company</a></li>
                <li class="uppercase text-primary-white text-2xl/[1.5625rem] tracking-[2px]"><a href="/locations">locations</a></li>
                <li class="uppercase text-primary-white text-2xl/[1.5625rem] tracking-[2px]"><a href="/contact">contact</a></li>
                
            </ul>
        </div>



    </div>
</header>

<style>

    .mobile-nav-container{
        transition: all 0.3s ease-in-out;
    }

    .mobile-nav-container.active {
        height: 235px;
    }




    li.nav-item::before {
        position: absolute;
        content: "";
        width: 100%;
        height: 1px;
        background-color: #333136;
        bottom: -4px;
        transform: scale(0);
        transition: transform 0.3s ease-in-out;
    }
    
    li.nav-item:hover::before {
        transform: scale(1);
        
    }

    .menu-icon div {
        transition: all 0.3s ease-in-out;
    }

    .menu-icon.active div:nth-child(2) {
        transform: scale(0);
        opacity: 0;
    }

    .menu-icon.active div:nth-child(1) {
        animation: bar1Anim 0.3s ease-in-out forwards;
    }
    .menu-icon div:nth-child(1) {
        animation: bar1AnimReverse 0.3s ease-in-out forwards;
    }

    .menu-icon.active div:nth-child(3) {
        animation: bar2Anim 0.3s ease-in-out forwards;
    }

    .menu-icon div:nth-child(3) {
        animation: bar2AnimReverse 0.3s ease-in-out;
    }

    @keyframes bar2Anim {

  
    50% {
    transform: translateY(-8px);
    }

    100% {
    transform: translateY(-8px) rotateZ(135deg);
    }
    }

    @keyframes bar2AnimReverse {
    0% {
        transform: translateY(-8px) rotateZ(135deg);
    }
    
    50% {
        transform: translateY(-8px) rotate(0deg);
    }
    
    100% {
        transform: translateY(0px);
    }
    }


    @keyframes bar1Anim {
    50% {
    transform: translateY(8px);
    }

    100% {
    transform: translateY(8px)  rotateZ(45deg);
    }
    }


    @keyframes bar1AnimReverse {
    0% {
    transform: translateY(8px) rotateZ(45deg);
    }

    50% {
    transform: translateY(8px) rotate(0deg);
    }

    100% {
    transform: translateY(0px);
    }
    }

    
</style>


