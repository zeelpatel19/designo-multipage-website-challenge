---
import { cn } from "@/lib/utils";
import { Image } from "astro:assets";

interface Props {
    image: ImageMetadata;
    imageAlt: ImageMetadata;
    title: string;
    reverse?: boolean;
}

const {image, imageAlt, title, reverse} = Astro.props;
---


<div class="tablet:grid tablet:gap-8 desktop:grid desktop:grid-cols-3">
    <Image
        src={image}
        alt={title}
        class="w-full tablet:hidden desktop:block desktop:h-full object-cover desktop:rounded-2xl"
    />

    <Image
        src={imageAlt}
        alt={title}
        class="w-full hidden tablet:block desktop:hidden rounded-2xl"
    />


    <div class={cn("w-full min-h-[24.625rem] tablet:min-h-[20.375rem] rounded-2xl bg-[#FDF3F0] flex flex-col justify-center items-center tablet:items-start tablet:px-[4.6875rem]  gap-6 desktop:col-span-2 relative overflow-hidden",
        reverse && "desktop:col-start-1 desktop:row-start-1"
    )}>

    <svg class="absolute inset-0 tablet:-top-64 overflow-visible" xmlns="http://www.w3.org/2000/svg" width="584" height="584"><defs><linearGradient id="a" x1="0%" x2="100%" y1="50%" y2="50%"><stop offset="0%" stop-color="#5D0202" stop-opacity="0"/><stop offset="100%" stop-color="#5D0202" stop-opacity=".498"/></linearGradient></defs><g fill="url(#a)" fill-rule="evenodd" opacity=".06"><circle cx="146" cy="438" r="146" transform="matrix(1 0 0 -1 0 876)"/><circle cx="146" cy="146" r="146" transform="matrix(-1 0 0 1 292 0)"/><circle cx="438" cy="438" r="146" transform="matrix(0 1 1 0 0 0)"/></g></svg>
        <h2 class="heading-lg text-primary-peach">{title}</h2>
        <ul class="text-center grid tablet:flex tablet:gap-24 tablet:text-left">
                <slot name="first-address"/>
                <slot name="second-address"/>
        </ul>
    </div>
</div>